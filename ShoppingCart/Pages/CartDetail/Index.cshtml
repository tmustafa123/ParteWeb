@page
@model ShoppingCart.Pages.CartDetail.IndexModel
@{
    ViewData["title"] = "Carts";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6"> 
            <h2 class="text-primary">All Carts</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="Create" class="btn btn-primary"> 
               <i class="bi bi-plus-square"></i> Add New Cart </a>
        </div>
    </div>
    <br /><br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Desciption</th>
                <th>No of Items in Cart</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.Carts)
            {
            <tr>
                <td class="w-25">@item.Name</td>
                <td class="w-25">@item.Description</td>
                <td>@item.Count</td>
            </tr>   
            }      
        </tbody>
    </table>
</div>


@page
@model ShoppingCart.Pages.ProductDetail.DeleteModel
@{
    ViewData["Title"] = "Delete Product";
}
<form method="post">
    <input hidden asp-for="Product.ProductId" />
    <div class="border p-3 mt-4"> 
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Delete Product</h2>
            <hr />
        </div>
        <div class="mb-3 w-50">
            <label asp-for="Product.Name"></label>
            <input asp-for="Product.Name" class="form-control" disabled />
            <span asp-validation-for="Product.Name" class="text-danger"></span>
        </div>
        <div class="mb-3 w-50">
            <label asp-for="Product.Description"></label> 
            <input asp-for="Product.Description" class="form-control" disabled />
            <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>
        <button type="submit" class="btn-primary btn-primary" style="width:150px;">Delete</button>
        <a asp-page="Index" class="btn btn-secondary" style="width:150px;">Back To List</a>
    </div>
</form>

